@{
    ViewData["Title"] = "Mission 3 - GradeCalc";
}

@model GradeCalcModel
<!-- gathering grade information to pass to js -->
<h2>-Grade Calculator-</h2>
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="Assignments" /><br />

    <label>Group Project: </label>
    <input id="grpProj" asp-for="GroupProjects" /><br />

    <label>Quizzes: </label>
    <input id="quizzes" asp-for="Quizzes" /><br />

    <label>Exams: </label>
    <input id="exams" asp-for="Exams" /><br />

    <label>INTEX: </label>
    <input id="intex" asp-for="Intex" /><br />
    <br />

    <input id="btnSubmit" type="submit" value="Submit" />
    <div asp-validation-summary="All"></div>
</form>

<script src="~/js/GradeCalc.js"></script>